<%- include ("../partials/updateProfileHeader") %>


    <form class="form edit_profile" id="form1" name="editProfile" accept-charset="UTF-8" action='/changePassword' method='post'>
        <h2><%= user.username %></h2>
        <p>Change your password here</p>
        <label>
            <i class="fa fa-user"></i>
            <input type="password" name="passwordOld" placeholder="Current Password" maxlength="35">
        </label>
        <label>
            <i class="fa fa-user"></i>
            <input type="password" name="passwordNew" placeholder="New Password" maxlength="35">
        </label>
        
        <button class="submit" type="submit">Update</button>
    </form>
    </section>

    <% if (message == 'wrongInput') { %>
        <script>
         swal(
            'Oh no!',
            'Password Input Error, try again',
            'error'
        )
       </script>
       <% } %>
 
