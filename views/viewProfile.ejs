<%- include ("../partials/mainHeader") %>


    <div id="profilePage" class="container target">
        <div class="row">
            <div class="col-sm-10">
                <h1 class="userName"><%= breederDetails.kennel_name %></h1> 
                <br>
            </div>
            <div class="col-sm-2">
                <a href="/users" class="pull-right">
                    <img title="profile image" class="img-circle img-responsive" src="/profileImages/default.jpg">
                </a>
            </div>
        </div>
    
    <br>
    
        <div class="row">
            <div class="col-sm-3">
                <ul class="list-group">
                    <li class="list-group-item text-muted list-group-item-warning" contenteditable="false">Profile</li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong class="">Name:</strong></span> <%= breederDetails.name %></li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong class="">Email: </strong></span> <%= breeder.email %></li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong class="">Phone: </strong></span> <%= breederDetails.mobile_phone %></li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong class="">Address 1: </strong></span> <%= breederDetails.address_1 %></li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong class="">Address 2: </strong></span> <%= breederDetails.address_2 %></li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong class="">City: </strong></span><%= breederDetails.city %></li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong class="">County: </strong></span><%= breederDetails.county %></li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong class="">Postcode: </strong></span><%= breederDetails.post_code %></li>
                </ul>
            
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        Kennel Registration Number:
                    </div>
                <div class="panel-body"><i style="color:green" class="fa fa-check-square"></i> 
                    <%= breederDetails.registration_number %>
                </div>
        </div>

    
        <ul class="list-group">
            <li class="list-group-item text-muted list-group-item-warning">Activity <i class="fa fa-dashboard fa-1x"></i></li>
            <li class="list-group-item text-right"><span class="pull-left"><strong class="">Joined:</strong></span> <%= joinDate %></li>
        </ul>
    </div>
    
    
    <div class="col-sm-9" style="" contenteditable="false">
        <div id="myDogAdverts" class="panel panel-primary target">
            <div  class="panel-heading" contenteditable="false">
               Kennels Dogs for sale:
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <% adverts.forEach(function(adverts){ %>
    
                            <div class="panel panel-primary target">
                                <div class="panel-heading" contenteditable="false">
                                    <h4><%= adverts.title %></h4>
                                </div>
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="thumbnail">
                                                <img alt="300x200" src="/profileImages/defaultAdpic.jpg">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <h3>Price: $<%= adverts.price %></h3>
                                            <p>Breed: <%= adverts.breed %></p>
                                            <p>Sex: <%= adverts.sex %></p>
                                            <p>Age: <%= adverts.age %></p>
                                            <p>Qty: <%= adverts.actual_quantity %></p>
                                            <p>Last Updated: <%= adverts.updated_at%></p>
                                            <p>Views: <%= adverts.views %></p>
                                            <a href="/viewAdd/<%=adverts.id%>"class="btn btn-success">View</a>
                                        </div>
                                        <div class="col-md-4">
                                            <h5><%= adverts.body %></h5>
                                            <p></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                </div>
            </div>
        </div>
    </div>


<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha384-nvAa0+6Qg9clwYCGGPpDQLVpLNn0fRaROjHqs13t4Ggj3Ez50XnGQqc/r8MhnRDZ" crossorigin="anonymous"></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js" integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd" crossorigin="anonymous"></script>
</body>
</html>