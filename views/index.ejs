<%- include ("../partials/mainHeader") %>
<% if(user === null) { %>
    <div class="wrapper">
        <div id="profilePage" class="container target">
            <div class="col-sm-10" style="" contenteditable="false">
                <div class="jumbotron">
                    <h1 class="display-4">Welcome to Scooby Who</h1>
                    <p class="lead">A safe place to buy and sell dogs in Ireland.</p>
                    <hr class="my-4">
                    <p>Our mission is to provide the people of Ireland a marketplace where they can trust the Dog Breeders they are buying their dogs from.
                        All breeders are vetted and registered before being able to sell on our platform, providing you the security and knowledge that the new
                        addition you are making to your family came from a place of love and care.
                    </p>
                    <p class="lead">
                        <a class="btn btn-success btn-lg" href="/login" role="button">Sign-In</a>
                        <a class="btn btn-primary btn-lg" href="/sign_up" role="button">Sign-up</a>
                    </p>
                </div>
<% } else{ %>
    <div class="wrapper">
        <div id="profilePage" class="container target">
            <div class="col-sm-10" style="" contenteditable="false">
                <div class="jumbotron">
                    <h1 class="display-4">Welcome back <%=user.username %></h1>
                    <p class="lead">Scooby Who is a safe place to buy and sell dogs in Ireland. Spread word!</p>
                    <hr class="my-4">
                </div>
<% } %>

            <% adverts.forEach(function(adverts){ %>
                
                <div class="panel panel-primary target">
                    <div class="panel-heading" contenteditable="false">
                        <h4><%= adverts.title %></h4>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="thumbnail">
                                    <img alt="300x200" src="/profileImages/defaultAdpic.jpg">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <h3>Price: $<%= adverts.price %></h3>
                                <p>Breed: <%= adverts.breed %></p>
                                <p>Sex: <%= adverts.sex %></p>
                                <p>Age: <%= adverts.age %></p>
                                <p>Qty: <%= adverts.actual_quantity %></p>
                                <p>Views: <%= adverts.views %></p>
                                <a href="/viewAdd/<%=adverts.id%>"class="btn btn-success">View</a>
                            </div>
                            <div class="col-md-4">
                                <h5><%= adverts.body %></h5>
                                <p></p>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>


<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha384-nvAa0+6Qg9clwYCGGPpDQLVpLNn0fRaROjHqs13t4Ggj3Ez50XnGQqc/r8MhnRDZ" crossorigin="anonymous"></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js" integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd" crossorigin="anonymous"></script>
</body>
</html>