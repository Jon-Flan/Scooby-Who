<%- include ("../partials/updateProfileHeader") %>

<div id="advertPage" class="container target">
    <div class="row">
        <div class="col-sm-10">
            <h1 class="userName"><%= user.username %></h1>  
            <br>
        </div>
        <div class="col-sm-2">
            <a href="#" class="pull-right">
                <img title="Advert image" class="img-rounded img-responsive" src="/profileImages/defaultAdpic.jpg" id="adImage">
                <a href="#" class="btn btn-success btn-sm">Upload Image</a>
            </a>
        </div>
    </div>
    

            <form class="formAdvert edit_profile" id="form2" name="editAdd" accept-charset="UTF-8" action='/advertEdited/<%=advert.id%>' method='post'>
                <h1>Edit your Advert</h1>
                <label class="formProfilelabel">
                    <i class="fa fa-edit"></i>
                    <input type="text" name="title" placeholder=<%= advert.title %> maxlength="35">
                </label>
                <label class="formProfilelabel">
                    <i class="fa fa-edit"></i>
                    <input type="text" name="breed" placeholder=<%= advert.breed %> maxlength="35">
                </label>
                <label class="formProfilelabel">
                    <i class="fa fa-edit"></i>
                    <input type="text" name="sex" placeholder=<%= advert.sex %> maxlength="25">
                </label>
                <label class="formProfilelabel">
                    <i class="fa fa-edit"></i>
                    <input type="text" name="age" placeholder=<%= advert.age %> maxlength="14">
                </label>
                <label class="formProfilelabel">
                    <i class="fa fa-edit"></i>
                    <input type="number" name="qty" placeholder=<%= advert.actual_quantity %> maxlength="50">
                </label>
                <label class="formProfilelabel">
                    <i class="fa fa-edit"></i>
                    <input type="number" step="0.01" name="price" placeholder=<%= advert.price %> maxlength="10">
                </label>
                <label class="formProfilelabel">
                    <textarea type="text" name="desc" placeholder="" maxlength="255" id="advertDesc"><%= advert.body %></textarea>
                </label>
            
                <button class="submit" type="submit">Update</button>
                <br>
                <p>If you would like to delete your advert: <a href="/deleteAdvert/<%=advert.id%>" class="btn btn-danger btn-xs">Click Here</a></p>
            </form>
</div>
