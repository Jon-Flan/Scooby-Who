<%- include ("../partials/updateProfileHeader") %>

<div id="advertPage" class="container target">
    <div class="row">
        <div class="col-sm-10">
            <h1 class="userName"><%= user.username %></h1>  
            <br>
        </div>
        <div class="col-sm-2">
            <a href="#" class="pull-right">
                <img title="Advert image" class="img-rounded img-responsive" src="/profileImages/default.jpg" id="adImage">
                <a href="#" class="btn btn-success btn-sm">Upload Image</a>
            </a>
        </div>
    </div>
    

            <form class="formAdvert edit_profile" id="form2" name="editAdd" accept-charset="UTF-8" action='/uploadAdvert' method='post'>
                <h1>Create your Advert</h1>
                <label class="formProfilelabel">
                    <i class="fa fa-edit"></i>
                    <input type="text" name="title" placeholder="Title" maxlength="35">
                </label>
                <label class="formProfilelabel">
                    <i class="fa fa-edit"></i>
                    <input type="text" name="breed" placeholder="Dog Breed" maxlength="35">
                </label>
                <label class="formProfilelabel">
                    <i class="fa fa-edit"></i>
                    <input type="text" name="sex" placeholder="Sex" maxlength="25">
                </label>
                <label class="formProfilelabel">
                    <i class="fa fa-edit"></i>
                    <input type="text" name="age" placeholder="Age" maxlength="14">
                </label>
                <label class="formProfilelabel">
                    <i class="fa fa-edit"></i>
                    <input type="number" name="qty" placeholder="How many dogs?" maxlength="50">
                </label>
                <label class="formProfilelabel">
                    <i class="fa fa-edit"></i>
                    <input type="number" step="0.01" name="price" placeholder="Price" maxlength="10">
                </label>
                <label class="formProfilelabel">
                    <textarea type="text" name="desc" placeholder="Advert Description" maxlength="255" id="advertDesc"></textarea>
                </label>
            
                <button class="submit" type="submit">Create</button>
            </form>
</div>
